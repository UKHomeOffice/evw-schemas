{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://www.gov.uk/schema/flight-request",
  "type": "object",
  "properties": {
    "flightNumber": {
      "type": "string",
      "maxLength":30
    },
    "arrivalDate": {
      "type": "string",
      "pattern": "^([0-9]{4})-(0[1-9]|1[0-2])-(0[1-9]|[1-2][0-9]|3[0-1])$"
    }
  },
  "additionalProperties": false
}